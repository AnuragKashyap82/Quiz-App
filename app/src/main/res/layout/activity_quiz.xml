<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".QuizActivity">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@color/white">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/shape_rectangle_01"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/questionCardView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="75dp"
            app:cardCornerRadius="20dp"
            android:elevation="10dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/nuniti_bold"
                    android:text="who invented android Studio?jgfukahghg"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_timer_white"
            android:fontFamily="@font/nuniti_bold"
            android:padding="12dp"
            android:text="24"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/questionCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/nuniti_bold"
            android:padding="12dp"
            android:text="2/5"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/lineLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionCardView"
            android:background="@drawable/button_background"
            android:drawablePadding="4dp"
            android:fontFamily="@font/nuniti_bold"
            android:paddingBottom="12dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:text="50 : 50"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lineLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionCardView"
            android:background="@drawable/button_background"
            android:drawablePadding="4dp"
            android:fontFamily="@font/nuniti_bold"
            android:paddingBottom="12dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:layout_alignParentEnd="true"
            android:paddingTop="12dp"
            android:drawableEnd="@drawable/ic_baseline_people_24"
            android:drawableStart="@drawable/ic_baseline_people_24"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/answerA"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/answers_bg"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="normal"
            android:onClick="onClick"
            android:fontFamily="@font/nuniti_bold"
            android:text="Tejkavbkwjbv"
            android:layout_below="@id/lineLine1"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/answerB"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/answers_bg"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="normal"
            android:fontFamily="@font/nuniti_bold"
            android:text="Tejkavbkwjbv"
            android:onClick="onClick"
            android:layout_below="@id/answerA"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/answerC"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/answers_bg"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="normal"
            android:onClick="onClick"
            android:fontFamily="@font/nuniti_bold"
            android:text="Tejkavbkwjbv"
            android:layout_below="@id/answerB"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/answerD"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/answers_bg"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="normal"
            android:onClick="onClick"
            android:fontFamily="@font/nuniti_bold"
            android:text="Tejkavbkwjbv"
            android:layout_below="@id/answerC"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/answerD"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/quitBtn"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@drawable/button_transparent_bg"
                android:text="Quit"
                android:textColor="@color/black"
                android:layout_marginEnd="4dp"
                android:textAllCaps="false"
                android:fontFamily="@font/nuniti_bold"/>

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="Next"
                android:onClick="onClick"
                android:layout_marginStart="4dp"
                android:textAllCaps="false"
                android:fontFamily="@font/nuniti_bold"/>

        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/white"
        android:padding="6dp"
        android:elevation="24dp"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/noQuestionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:visibility="gone"
        android:fontFamily="@font/nuniti_bold"
        android:layout_centerInParent="true"
        android:text="No Questions Available!!!!!"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addQuestionsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:elevation="22dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_add_24"
        app:tint="@color/white" />

</RelativeLayout>