<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal"
        android:textSize="22dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/nuniti_bold"
        android:text="Welcome Back, Login \n for Continue !"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv"
        android:src="@drawable/quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="QuizX"
        android:fontFamily="@font/nuniti_bold"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/emailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray02"
        android:text="EmailId"
        android:textSize="12dp"
        android:fontFamily="@font/nuniti_bold"
        android:layout_below="@id/appName"
        android:layout_marginStart="18sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/emailTv"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/nunito_light"
        android:hint="Enter your email"
        android:padding="12dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/passTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray02"
        android:text="Password"
        android:textSize="12dp"
        android:fontFamily="@font/nuniti_bold"
        android:layout_below="@id/emailEt"
        android:layout_marginStart="18sp"
        android:layout_marginTop="16dp"/>


    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/passTv"
        android:inputType="textPassword"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/nunito_light"
        android:hint="Enter your password"
        android:padding="12dp"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/rememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:textSize="12dp"
        android:fontFamily="@font/nunito_light"
        android:layout_below="@id/passwordEt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/forgotPasswordTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:text="Forgot Password?"
        android:fontFamily="@font/nunito_light"
        android:layout_below="@id/passwordEt"
        android:layout_marginTop="26dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"/>

    <LinearLayout
        android:id="@+id/signInLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rememberMe"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp">

        <Button
            android:id="@+id/signInBtn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:visibility="visible"
            android:background="@drawable/button_background"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/noAccountTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray02"
        android:text="Don't have Account"
        android:textSize="12dp"
        android:padding="12dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nuniti_bold"
        android:layout_below="@id/signInLl"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/createAccountBtn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:background="@drawable/button_transparent_bg"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/noAccountTv"
        android:layout_marginTop="12dp"/>


</RelativeLayout>